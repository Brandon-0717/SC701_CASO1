@model SC701C1.Abstracciones.Modelos.ModelosDTO.ClienteDTO

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modalCrearCliente" tabindex="-1" aria-labelledby="modalCrearClienteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <!-- Header -->
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="modalCrearClienteLabel">
                    <i class="bi bi-person-plus me-2"></i> Crear Nuevo Cliente
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Body -->
            <div class="modal-body px-4 py-3">
                <form asp-action="RegistrarCliente" id="formCrearCliente">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none"></div>

                    <!-- Sección: Identificación -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-person-vcard me-1"></i> Identificación
                        </legend>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Identificacion" class="form-label fw-semibold"></label>
                                <input asp-for="Identificacion" class="form-control" placeholder="Ingrese identificación..." />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TipoIdentificacion" class="form-label fw-semibold"></label>
                                <select asp-for="TipoIdentificacion" class="form-select">
                                    <option value="">Seleccione tipo...</option>
                                    <option value="FISICA NACIONAL">Física Nacional</option>
                                    <option value="DIMEX">DIMEX</option>
                                    <option value="JURIDICA">Jurídica</option>
                                </select>
                                <span asp-validation-for="TipoIdentificacion" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Sección: Datos Personales -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-person-lines-fill me-1"></i> Datos Personales
                        </legend>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre..." />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PrimerApellido" class="form-label fw-semibold"></label>
                                <input asp-for="PrimerApellido" class="form-control" placeholder="Primer apellido..." />
                                <span asp-validation-for="PrimerApellido" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SegundoApellido" class="form-label fw-semibold"></label>
                                <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo apellido..." />
                                <span asp-validation-for="SegundoApellido" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Edad" class="form-label fw-semibold"></label>
                                <input asp-for="Edad" class="form-control" placeholder="Edad..." />
                                <span asp-validation-for="Edad" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Sexo</label>
                                <div class="d-flex align-items-center gap-3 mt-1">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="true" id="sexoMasculino" />
                                        <label class="form-check-label" for="sexoMasculino">M</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="false" id="sexoFemenino" />
                                        <label class="form-check-label" for="sexoFemenino">F</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Sexo" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Sección: Contacto -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-telephone me-1"></i> Contacto
                        </legend>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                                <input asp-for="Telefono" class="form-control" placeholder="Ej: 8888-8888" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CorreoElectronico" class="form-label fw-semibold"></label>
                                <input asp-for="CorreoElectronico" class="form-control" placeholder="correo@ejemplo.com" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Footer con botones -->
                    <div class="modal-footer border-0 pt-3">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cerrar
                        </button>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-circle me-1"></i> Crear Cliente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
