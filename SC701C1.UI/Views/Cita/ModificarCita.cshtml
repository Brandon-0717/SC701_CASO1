@model SC701C1.Abstracciones.Modelos.ModelosDTO.CitaDTO

<!-- Modal Editar Cita -->
<div class="modal fade" id="modalEditarCita" tabindex="-1" aria-labelledby="modalEditarCitaLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <!-- Header -->
            <div class="modal-header bg-warning text-dark rounded-top-4">
                <h5 class="modal-title fw-bold" id="modalEditarCitaLabel">
                    <i class="bi bi-pencil-square me-2"></i> Editar Cita
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Body -->
            <div class="modal-body px-4 py-3">
                <form id="formEditarCita">
                    <input type="hidden" asp-for="CitaId" id="editCitaId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="NombreCliente" class="form-label fw-semibold"></label>
                            <input asp-for="NombreCliente" id="edt-ct-NombreCliente" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="FechaCita" class="form-label fw-semibold"></label>
                            <input asp-for="FechaCita" id="edt-ct-FechaCita" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="NombreVehiculo" class="form-label fw-semibold"></label>
                            <input asp-for="NombreVehiculo" id="edt-ct-NombreVehiculo" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Estado" class="form-label fw-semibold"></label>
                            <select asp-for="Estado" id="edt-ct-Estado" class="form-select">
                                <option value="Ingresada">Ingresada</option>
                                <option value="Cancelada">Cancelada</option>
                                <option value="Concluida">Concluida</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer border-0 pt-3">
                <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cerrar
                </button>
                <button type="submit" form="formEditarCita" class="btn btn-warning px-4">
                    <i class="bi bi-check-circle me-1"></i> Guardar Cambios
                </button>
            </div>

        </div>
    </div>
</div>
