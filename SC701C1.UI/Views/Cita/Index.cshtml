@model IEnumerable<SC701C1.Abstracciones.Modelos.ModelosDTO.CitaDTO>

@{
    ViewData["Title"] = "Citas";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"> Listado de Citas</h2>
        <button type="button" class="btn btn-outline-success btn-lg" data-bs-toggle="modal" data-bs-target="#modalCrearCita">
            <i class="bi bi-plus-circle me-2"></i> Agendar Cita
        </button>
    </div>

    <div class="card shadow border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tablaCitas" class="table table-hover table-bordered table-striped align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>Fecha Cita</th>
                            <th>Cliente</th>
                            <th>Vehiculo</th>
                            <th>Estado</th>
                            <th>Atenciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- DataTables llenará esto automáticamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("CrearCita")
@await Html.PartialAsync("ModificarCita")

@section Scripts {
    <!-- CSS de Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- JS de Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Cita.js" asp-append-version="true"></script>
}
